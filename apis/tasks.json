{
    "name" : "tasks",
    "active" : true,
    "proxy" : {
        "listen_path" : "/tasks/*",
        "upstream_url" : "http://api-task:8000/tasks/",
        "strip_path" : true,
        "append_path" : false,
        "preserve_host" : false,
        "methods" : ["GET", "POST", "PUT", "DELETE"]
    },
    "plugins": [
        {
            "name": "oauth2",
            "enabled" : true,
            "config": {
                "server_name": "local"
            }
        }
    ]
}
